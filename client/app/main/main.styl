.thing-form
    margin 20px 0

#banner
    border-bottom none

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)
    height 100%
    position absolute
    width 100%

.hero-unit h1
    font-family 'NexaRust'
    margin-top 0

.hero-unit .lead
    font-weight 700
    font-family 'NexaRustHandmade'

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center

.vertical-container
    height 100%
    display -webkit-flex
    display flex
    -webkit-align-items center
    align-items center
    -webkit-justify-content center
    justify-content center
    flex-direction column